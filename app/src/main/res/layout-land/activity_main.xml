<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302929"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageIntro"
        android:layout_width="200dp"
        android:layout_height="312dp"
        android:src="@drawable/pageone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#1447c8"
        android:id="@+id/ds_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:layout_toLeftOf="@+id/ds_second"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/ds_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="266dp"
        android:text="S"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text=" Turning ordinary people to extra-ordinary millionaires "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>
</RelativeLayout>