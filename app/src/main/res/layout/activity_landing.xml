<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_three"
    android:orientation="vertical"
    tools:context=".landingActivity">

    <include layout="@layout/toolbar" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="140dp"
        app:srcCompat="@drawable/pageone"
        android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="76dp"
                android:layout_height="71dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/login" />



            <Button
                android:id="@+id/login"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cornerssecond"
                android:text="DTC LOGIN"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="68dp"
                android:layout_height="62dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/aim_account" />



            <Button
                android:id="@+id/account_linking"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cornerssecond"
                android:text="ACCOUNT LINKING"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/product_six" />

            <Button
                android:id="@+id/testimonials"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/account_linking"
                android:layout_marginTop="5dp"
                android:background="@drawable/cornerssecond"
                android:text="TESTIMONY"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

