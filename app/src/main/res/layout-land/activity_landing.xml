<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_three"
    android:orientation="vertical"
    tools:context=".landingActivity">

    <include layout="@layout/toolbar" />


    <ImageView android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/pageone"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView android:id="@+id/imageView"
                android:layout_width="76dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/login"/>
            <ImageView android:id="@+id/imageView2"
                android:layout_width="68dp"
                android:layout_height="62dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/aim_account"/>
            <ImageView android:id="@+id/imageView3"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/product_six"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <Button android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/login"
                android:background="@drawable/cornerssecond"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DTC LOGIN"
                android:textAllCaps="true"/>
            <Button android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/account_linking"
                android:background="@drawable/cornerssecond"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="ACCOUNT LINKING"
                android:textAllCaps="true"/>
            <Button android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/testimonials"
                android:background="@drawable/cornerssecond"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="TESTIMONY"
                android:layout_alignLeft="@+id/account_linking"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>